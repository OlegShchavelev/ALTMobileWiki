{
  "version": "0.2",
  "language": "en, ru",
  "patterns": [
    {
      "name": "code-block",
      "pattern": "/^\\s*```[\\s\\S]*?^\\s*```/gm"
    },
    {
      "name": "code-inline-block",
      "pattern": "`[\\s\\S]*?`"
    },
    {
      "name": "frontmatter-inter",
      "pattern": "{{[\\s\\S]*?}}"
    },
    {
      "name": "frontmatter-block",
      "pattern": "/^\\s*---[\\s\\S]*?^\\s*---/gm"
    },
    {
      "name": "html-comment-block",
      "pattern": "/^\\s*<<!--[\\s\\S]*?^\\s*-->>/gs"
    },
    {
      "name": "html-tag",
      "pattern": "<.*?/>"
    }
  ],
  "ignoreRegExpList": [
    ["code-block"],
    ["code-inline-block"],
    ["html-tag"],
    ["frontmatter-block"],
    ["html-comment-block"],
    ["frontmatter-inter"]
  ],
  "dictionaryDefinitions": [
    {
      "name": "proper nouns",
      "path": "./.cspell/proper-nouns.dict",
      "addWords": true
    },
    {
      "name": "anglicisms",
      "path": "./.cspell/anglicisms.dict",
      "addWords": true
    },
    {
      "name": "slang",
      "path": "./.cspell/slang.dict",
      "addWords": true
    },
    {
      "name": "forbidden",
      "path": "./.cspell/forbidden.dict",
      "addWords": true
    },
    {
      "name": "terms",
      "path": "./.cspell/terms.dict",
      "addWords": true
    },
    {
      "name": "people names",
      "path": "./.cspell/people-names.dict",
      "addWords": true
    },
    {
      "name": "simple words",
      "path": "./.cspell/simple-words.dict",
      "addWords": true
    }
  ],
  "dictionaries": [
    "proper nouns",
    "anglicisms",
    "slang",
    "forbiden",
    "people names",
    "terms",
    "simple words"
  ],
  "import": ["@cspell/dict-ru_ru/cspell-ext.json"]
}
